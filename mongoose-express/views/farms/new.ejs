<!DOCTYPE html>
<html lang="en">
  <%- include("../partials/head")  %>
  <body class="d-flex flex-column min-vh-100">
    <%- include("../partials/nav")  %>

    <div class="container">

        <h1>Add a new Farm</h1>
  
        <form action="/farms" method="POST">
          <div class="form-group">
            <label for="name">Farm name:</label>
            <input type="text" class="form-control" name="name" id="name" placeholder="Product name">
          </div>
          <div class="form-group">
            <label for="city">City:</label>
            <input type="text" class="form-control" name="city" id="city" placeholder="Brisbane">
          </div>
          <div class="form-group">
            <label for="email">Email:</label>
            <input type="email" class="form-control" name="email" id="email" placeholder="example@mail.com">
          </div>
          <button type="submit" class="btn btn-primary">Submit</button>
        </form>
  
    </div>

    <%- include("../partials/footer")  %>
  </body>
  
</html>