<!DOCTYPE html>
<html lang="en">
  <%- include("../partials/head")  %>
  <body class="d-flex flex-column min-vh-100">
    <%- include("../partials/nav")  %>

    <div class="container">
      
      <h1>Edit Farm: <%= farm.name %></h1>

      <form action="/farms/<%= farm._id %>?_method=PUT" method="POST">
        <div class="form-group">
          <label for="name">Farm name:</label>
          <input type="text" class="form-control" name="name" id="name" value="<%= farm.name %>">
        </div>
        <div class="form-group">
          <label for="city">City:</label>
          <input type="text" class="form-control" name="city" id="city" value="<%= farm.city %>">
        </div>
        <div class="form-group">
          <label for="email">Email:</label>
          <input type="email" class="form-control" name="email" id="email" value="<%= farm.email %>">
        </div>
        <button type="submit" class="btn btn-primary">Submit</button> <a class="btn btn-danger cancelBtn" href="/farms/<%= farm._id %>" role="button">Cancel</a>
      </form>
  
    </div>

    <%- include("../partials/footer")  %>
  </body>
  
</html>