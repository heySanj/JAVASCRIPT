<!DOCTYPE html>
<html lang="en">
  <%- include("../partials/head")  %>
  <body class="d-flex flex-column min-vh-100">
    <%- include("../partials/nav")  %>
    <div class="container">
        <h1>All Products</h1>

        <nav class="navbar categoryMenu">
          <form class="container-fluid justify-content-center">
            <a class="nav-link btn btn-outline-dark <%= filter === 'all' ? 'active':'' %>" href="/products">All Products</a>
            <% for( let category of categories ) { %>
              <a class="nav-link btn btn-outline-dark <%= filter === category ? 'active':'' %>" href="/products?category=<%= category %>"><%= category %></a>
            <% } %>
          </form>
        </nav>

        <ul class="list-group">
            <% for( let product of products ) { %>
                <a href="/products/<%= product._id %>" class="list-group-item list-group-item-action"><%= product.name %></a>
            <% } %>
        </ul>
        <a class="btn btn-outline-dark" href="/products/new" role="button"><b>+</b></a>
    </div>
    <%- include("../partials/footer")  %>
  </body>
  
</html>
