<!DOCTYPE html>
<html lang="en">
  <%- include("../partials/head")  %>
  <body class="d-flex flex-column min-vh-100">
    <%- include("../partials/nav")  %>
    <div class="container">
        <h1><%= product.name %></h1>
        <ul class="list-group">
            <li class="list-group-item">Price: $<%= product.price %></li>
            <li class="list-group-item">Category: <%= product.category %></li>
            <% if (product.farm) { %>
              <li class="list-group-item">Farm: <a href="/farms/<%= product.farm._id %>"><%= product.farm.name %></a></li>
            <% } %>
        </ul>



        <form action="/products/<%= product._id %>?_method=DELETE" method="POST" class="form-inline">
          <a class="btn btn-primary" href="/products/<%= product._id %>/edit" role="button">Edit</a>
          <button type="submit" class="btn btn-outline-danger cancelBtn"><b>x</b></button>
        </form>
    </div>
    <%- include("../partials/footer")  %>
  </body>
  
</html>
